{
  /* bare bones tsconfig */
  "compilerOptions": {
    /* lang/env */
    "target": "es2020",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",

    /* Emit */
    "outDir": "./dist",
    "declaration": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    // "noImplicitAny": true,
    "strictNullChecks": true
  }
}
